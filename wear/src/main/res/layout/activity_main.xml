<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/number"
            android:layout_width="@dimen/large_round_button_size"
            android:layout_height="@dimen/large_round_button_size"
            android:layout_marginBottom="35dp"
            android:background="@drawable/round_button"
            android:textColor="@color/white"
            android:textSize="@dimen/number_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_box="all"
        android:orientation="horizontal"
        android:gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/fizz_button"
            android:layout_width="@dimen/small_round_button_size"
            android:layout_height="@dimen/small_round_button_size"
            android:layout_marginBottom="@dimen/side_button_margin_bottom"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:text="@string/fizz" />

        <Button
            android:id="@+id/fizzbuzz_button"
            android:layout_width="@dimen/small_round_button_size"
            android:layout_height="@dimen/small_round_button_size"
            android:layout_marginLeft="@dimen/center_button_margin_right_left"
            android:layout_marginRight="@dimen/center_button_margin_right_left"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:text="@string/fizzbuzz" />

        <Button
            android:id="@+id/buzz_button"
            android:layout_width="@dimen/small_round_button_size"
            android:layout_height="@dimen/small_round_button_size"
            android:layout_marginBottom="@dimen/side_button_margin_bottom"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:text="@string/buzz" />

    </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>
